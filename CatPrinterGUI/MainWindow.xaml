<Window x:Class="CatPrinterGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cat Printer GUI - MXW01 Thermal Printer Control"
        Height="800" Width="1100"
        MinHeight="700" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ–¨ï¸" FontSize="28" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Cat Printer GUI" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="MXW01 Thermal Printer Control" FontSize="12" Foreground="#BBDEFB"/>
                    </StackPanel>
                </StackPanel>

                <!-- Connection Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="#F44336" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
                <StackPanel>
                    <!-- Connection Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ”— Connection" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="ConnectButton" Content="ðŸ” Scan &amp; Connect" 
                                        Style="{StaticResource PrimaryButton}" 
                                        Click="ConnectButton_Click"/>
                                <Button x:Name="DisconnectButton" Content="Disconnect" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Click="DisconnectButton_Click"
                                        Grid.Column="1" Margin="10,0,0,0" IsEnabled="False"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Print Settings Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ–¼ï¸ Print Settings" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                            <!-- Image Selection -->
                            <TextBlock Text="Image:" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ImagePathTextBox" Style="{StaticResource ModernTextBox}" 
                                         IsReadOnly="True" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="Browse..." Style="{StaticResource SecondaryButton}" 
                                        Margin="10,0,0,0" Click="BrowseImage_Click"/>
                            </Grid>

                            <!-- Intensity Slider -->
                            <TextBlock Text="Print Intensity:" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="IntensitySlider" Minimum="0" Maximum="100" Value="80" 
                                        Style="{StaticResource ModernSlider}" TickFrequency="10" IsSnapToTickEnabled="True"/>
                                <TextBlock Grid.Column="1" Text="{Binding ElementName=IntensitySlider, Path=Value, StringFormat={}{0:0}%}" 
                                           FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" 
                                           HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Grid>

                            <!-- Print Mode -->
                            <TextBlock Text="Print Mode:" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="PrintModeComboBox" Style="{StaticResource ModernComboBox}" Margin="0,0,0,15" Padding="12,10">
                                <ComboBoxItem Content="1bpp - Monochrome (Fast, Lower Quality)" IsSelected="True"/>
                                <ComboBoxItem Content="4bpp - 16-Level Grayscale (Slower, Higher Quality)"/>
                            </ComboBox>

                            <!-- Dithering Method -->
                            <TextBlock Text="Dithering Method:" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="DitheringComboBox" Style="{StaticResource ModernComboBox}" Margin="0,0,0,15" Padding="12,10">
                                <ComboBoxItem Content="None" IsSelected="True"/>
                                <ComboBoxItem Content="Bayer 2x2"/>
                                <ComboBoxItem Content="Bayer 4x4"/>
                                <ComboBoxItem Content="Bayer 8x8"/>
                                <ComboBoxItem Content="Bayer 16x16"/>
                                <ComboBoxItem Content="Floyd-Steinberg"/>
                            </ComboBox>

                            <!-- Print Button -->
                            <Button x:Name="PrintButton" Content="ðŸ–¨ï¸ Print Image" Style="{StaticResource AccentButton}" 
                                    Click="PrintButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <!-- Paper Control Card -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“„ Paper Control" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Lines:" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="LineCountTextBox" Style="{StaticResource ModernTextBox}" Text="20"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="EjectButton" Content="â¬‡ï¸ Eject Paper" Style="{StaticResource SecondaryButton}" 
                                        Click="EjectPaper_Click" Margin="0,0,5,0" IsEnabled="False"/>
                                <Button x:Name="RetractButton" Content="â¬†ï¸ Retract Paper" Style="{StaticResource SecondaryButton}" 
                                        Click="RetractPaper_Click" Margin="5,0,0,0" IsEnabled="False"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Device Info Card -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Device Information" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" x:Name="BatteryButton" Content="ðŸ”‹ Battery Level" 
                                        Style="{StaticResource SecondaryButton}" Click="BatteryLevel_Click" 
                                        Margin="0,0,5,10" IsEnabled="False"/>
                                <Button Grid.Row="0" Grid.Column="1" x:Name="StatusButton" Content="ðŸ“‹ Printer Status" 
                                        Style="{StaticResource SecondaryButton}" Click="PrinterStatus_Click" 
                                        Margin="5,0,0,10" IsEnabled="False"/>

                                <Button Grid.Row="1" Grid.Column="0" x:Name="InfoButton" Content="â„¹ï¸ Device Info" 
                                        Style="{StaticResource SecondaryButton}" Click="DeviceInfo_Click" 
                                        Margin="0,0,5,0" IsEnabled="False"/>
                                <Button Grid.Row="1" Grid.Column="1" x:Name="PrintTypeButton" Content="ðŸ†” Print Type" 
                                        Style="{StaticResource SecondaryButton}" Click="PrintType_Click" 
                                        Margin="5,0,0,0" IsEnabled="False"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel - Log -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ“ Activity Log" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Button Content="Clear" Style="{StaticResource SecondaryButton}" 
                                Click="ClearLog_Click" Padding="10,5" Margin="15,0,0,0"/>
                    </StackPanel>

                    <TextBox x:Name="LogTextBox" Grid.Row="1" 
                             Background="#F5F5F5" BorderThickness="1" BorderBrush="#E0E0E0"
                             FontFamily="Consolas" FontSize="12" 
                             IsReadOnly="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                        <CheckBox x:Name="AutoScrollCheckBox" Content="Auto-scroll" IsChecked="True"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
